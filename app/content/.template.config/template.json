{
    "$schema": "http://json.schemastore.org/template",
    "author": "kazurego7",
    "classifications": [
        "Common",
        "Console"
    ],
    "identity": "MakeAC.Template.CSharp",
    "name": "MakeAC-CSharp",
    "shortName": "mkaccs",
    "tags": {
        "language": "C#"
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": [
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                ".template.config/**"
            ]
        }
    ],
    "symbols": {
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        }
    },
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ],
    "primaryOutputs": [
        {
            "path": "MakeAC-CSharp.csproj"
        }
    ]
}